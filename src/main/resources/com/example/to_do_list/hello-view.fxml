<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" onMouseClicked="#onHelloButtonClick" prefHeight="481.0" prefWidth="240.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.to_do_list.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="textImput" onAction="#onHelloButtonClick" promptText="Type what you need to do" />
   <DatePicker fx:id="datePicker" />
    <Button fx:id="addButton" onAction="#onHelloButtonClick" prefHeight="36.0" prefWidth="92.0" text="Add To List" />
   <Label text="My To Do List">
      <font>
         <Font name="American Typewriter" size="18.0" />
      </font>
   </Label>
   <ListView fx:id="toDoList" onKeyPressed="#deleteKey" prefHeight="343.0" prefWidth="200.0" />
</VBox>
